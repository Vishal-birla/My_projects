import random

# Step 1: List of predefined words
words = ["apple", "banana", "grape", "orange", "mango"]
word_to_guess = random.choice(words)

# Step 2: Initialize variables
guessed_letters = []
wrong_guesses = 0
max_wrong_guesses = 6

# Step 3: Game loop
while wrong_guesses < max_wrong_guesses:
    display_word = "".join([letter if letter in guessed_letters else "_" for letter in word_to_guess])
    print("Word:", display_word)
    
    if "_" not in display_word:
        print("ðŸŽ‰ Congratulations! You guessed the word.")
        break

    guess = input("Guess a letter: ").lower()

    if guess in guessed_letters:
        print("You've already guessed that letter.")
        continue

    guessed_letters.append(guess)

    if guess in word_to_guess:
        print("âœ… Good guess!")
    else:
        wrong_guesses += 1
        print(f"âŒ Wrong guess! You have {max_wrong_guesses - wrong_guesses} attempts left.")

# Step 4: If player runs out of guesses
if wrong_guesses == max_wrong_guesses:
    print("ðŸ’€ Game Over! The word was:", word_to_guess)
